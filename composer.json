{
  "name": "oxidio/oxidio",
  "type": "library",
  "description": "shared functionality for oxid(io) modules",
  "license": "GPL-3.0",
  "repositories": [
    {"type": "path", "url": "tests/fixtures/foo"},
    {"type": "path", "url": "tests/fixtures/bar"}
  ],
  "require": {
    "php-fn/php-fn": "^2.0",
    "php-fn/cli": "^2.0",
    "symfony/filesystem": "^3",

    "php": ">=7.1",
    "ext-json": "*",
    "ext-pdo": "*"
  },
  "require-dev": {
    "oxid-esales/oxideshop-demodata-ce": "^6",
    "oxidio/project": "1.x-dev",
    "oxidio/module-seo": "1.x-dev",
    "oxidio/module-foo": "^1",
    "oxidio/module-bar": "^1",
    "php-coveralls/php-coveralls": "^2.1",
    "php-fn/test": "^2.0"
  },
  "autoload": {
    "psr-4": {"Oxidio\\": ["src/Oxidio"]},
    "files": ["src/autoload-files.php"]
  },
  "autoload-dev": {
    "psr-4": {"Oxidio\\": ["tests/Oxidio"]}
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "bin": [
    "bin/oxidio"
  ],
  "extra": {
    "branch-alias": {
      "dev-master": "1.x-dev"
    }
  },
  "scripts": {
    "test": "php -d error_reporting=22527 vendor/bin/phpunit tests/"
  }
}
