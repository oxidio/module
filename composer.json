{
  "name": "oxidio/oxidio",
  "type": "library",
  "description": "shared functionality for oxid(io) modules",
  "license": "GPL-3.0",
  "repositories": [
    {"type": "path", "url": "tests/fixtures/foo"},
    {"type": "path", "url": "tests/fixtures/bar"}
  ],
  "require": {
    "php-fn/php-fn": "~2.0.0",
    "php-fn/cli": "~2.0.0",
    "symfony/filesystem": "~3.4.0",
    "sebastian/diff": "~3.0.0",
    "php": ">=7.1",
    "ext-json": "*",
    "ext-pdo": "*"
  },
  "require-dev": {
    "oxid-esales/oxideshop-demodata-ce": "~6.0.0",
    "oxidio/project": "~1.0.0",
    "oxidio/module-seo": "~1.0.0",
    "oxidio/module-foo": "~1.0.0",
    "oxidio/module-bar": "~1.0.0",
    "php-coveralls/php-coveralls": "~2.1.0",
    "php-fn/test": "~2.0.0",
    "oxid-esales/wave-theme": "~1.2.0"
  },
  "autoload": {
    "psr-4": {"Oxidio\\": ["src/Oxidio"]},
    "files": ["src/autoload-files.php"]
  },
  "autoload-dev": {
    "psr-4": {"Oxidio\\": ["tests/Oxidio"]}
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "bin": [
    "bin/oxidio"
  ],
  "extra": {
    "branch-alias": {
      "dev-master": "1.x-dev"
    }
  },
  "scripts": {
    "test": "php -d error_reporting=22527 vendor/bin/phpunit tests/",
    "cover": [
      "mkdir -p build/logs",
      "xdebug -d error_reporting=22527 vendor/bin/phpunit --coverage-clover build/logs/clover.xml --whitelist src/Oxidio tests/",
      "COVERALLS_RUN_LOCALLY=1 vendor/bin/php-coveralls -v"
    ]
  }
}
