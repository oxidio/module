{
  "name": "oxidio/oxidio",
  "type": "library",
  "description": "shared functionality for oxid(io) modules",
  "license": "GPL-3.0",
  "repositories": [
    {
      "type": "path",
      "url": "tests/fixtures/*"
    }
  ],
  "require": {
    "oxidio/bin": "^1.0",
    "oxidio/constants": "^1.0",
    "oxidio/shop": "^6.3",
    "oxidio/composer-plugin": "^2.0",
    "oxidio/unified-namespace-generator": "^2.0",
    "oxidio/facts": "^2.0",
    "symfony/yaml": "^3.4",
    "vlucas/phpdotenv": "^3.4",
    "php-fn/php-fn": "^3.0",
    "php-fn/cli": "^3.0",
    "symfony/filesystem": "^3.4",
    "sebastian/diff": "^3.0",

    "ext-json": "*",
    "ext-pdo": "*",
    "php": ">=7.1"
  },
  "require-dev": {
    "oxidio/theme-wave": "^1.2",
    "oxidio/module-seo": "^1.0",
    "oxidio/module-foo": "^1.0",
    "oxidio/module-bar": "^1.0",
    "oxidio/test": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "Oxidio\\": [
        "src/Oxidio"
      ]
    },
    "files": [
      "src/autoload-files.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Oxidio\\": [
        "tests/Oxidio"
      ]
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "bin": [
    "bin/oxidio"
  ],
  "extra": {
    "branch-alias": {
      "dev-oxidio-6.1.x": "6.3.x-dev",
      "dev-master": "6.x-dev"
    }
  },
  "scripts": {
    "test": "php -d error_reporting=22527 vendor/bin/phpunit tests/",
    "cover": [
      "mkdir -p build/logs",
      "xdebug -d error_reporting=22527 vendor/bin/phpunit --coverage-clover build/logs/clover.xml --whitelist src/Oxidio tests/",
      "COVERALLS_RUN_LOCALLY=1 vendor/bin/php-coveralls -v"
    ]
  }
}
