{
  "name": "oxidio/oxidio",
  "type": "library",
  "description": "shared functionality for oxid(io) modules",
  "license": "GPL-3.0",
  "repositories": [
    {"type": "path", "url": "tests/fixtures/foo"},
    {"type": "path", "url": "tests/fixtures/bar"}
  ],

  "require": {
    "php-fn/php-fn": "^2",
    "php-fn/di": "^2",
    "php-fn/cli": "^2",
    "symfony/filesystem": "^3",

    "php": ">=7.1",
    "ext-json": "*",
    "ext-pdo": "*"
  },
  "require-dev": {
    "oxid-esales/oxideshop-demodata-ce": "^6",
    "oxidio/project": "dev-master",
    "oxidio/module-foo": "^1",
    "oxidio/module-bar": "^1",
    "phpdocumentor/reflection-docblock": "^4",

    "php-fn/test": "^1"
  },
  "autoload": {
    "psr-4": {"Oxidio\\": ["src/Oxidio"]},
    "files": ["src/autoload-files.php"]
  },
  "autoload-dev": {
    "psr-4": {"Oxidio\\": ["tests/Oxidio"]}
  }
}
